{
  "name": "team-polls",
  "version": "1.0.0",
  "description": "Real-time team polling application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "node scripts/start.js",
    "minimal": "node minimal-server.js",
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "jest --coverage",
    "test:api": "node tests/test-client.js",
    "lint": "eslint src/**/*.ts",
    "migrate": "node scripts/migrate.js",
    "postinstall": "cd frontend && npm install",
    "dev:all": "concurrently \"npm run dev\" \"cd frontend && npm run dev\"",
    "setup:check": "node scripts/setup-check.js",
    "init": "node scripts/init.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pino": "^8.16.0",
    "pino-http": "^8.5.1",
    "prom-client": "^15.0.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.5",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "pino-pretty": "^10.2.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}